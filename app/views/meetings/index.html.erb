<h1>Listing meetings</h1>

<table>
  <tr>
    <th>Day</th>
    <th>Date</th>
    <th>Xcoordinate</th>
    <th>Ycoordinate</th>
    <th>Food</th>
    <th>Speaker</th>
    <th>Speaker name</th>
    <th>Topic</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @meetings.each do |meeting| %>
  <tr>
    <td><%= meeting.day %></td>
    <td><%= meeting.date %></td>
    <td><%= meeting.xcoordinate %></td>
    <td><%= meeting.ycoordinate %></td>
    <td><%= meeting.food %></td>
    <td><%= meeting.speaker %></td>
    <td><%= meeting.speaker_name %></td>
    <td><%= meeting.topic %></td>
    <td><%= link_to 'Show', meeting %></td>
    <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
    <td><%= link_to 'Destroy', meeting, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

